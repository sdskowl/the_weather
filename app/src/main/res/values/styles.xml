<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchLinerLayout" parent="Theme.TheWeather">
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/searchPaddingStartEnd</item>
        <item name="android:paddingEnd">@dimen/searchPaddingStartEnd</item>
    </style>

    <style name="SearchEditText" parent="Theme.TheWeather">
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/input</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="SearchStartButton" parent="Theme.TheWeather">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="srcCompat">@drawable/ic_search</item>
        <item name="android:gravity">right</item>

    </style>

    <style name="SearchStopButton" parent="Theme.TheWeather">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">gone</item>
        <item name="srcCompat">@drawable/ic_close</item>
        <item name="android:gravity">right</item>

    </style>

    <style name="CityNameStyle" parent="Theme.TheWeather">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/city</item>

    </style>

    <style name="TemperatureStyle" parent="Theme.TheWeather">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/temperature</item>

    </style>

    <style name="WeatherCodeStyle" parent="Theme.TheWeather">
        <item name="android:textSize">@dimen/weatherCode</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="WindSpeedStyle" parent="Theme.TheWeather">
        <item name="android:textSize">@dimen/windSpeed</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="MainLayoutStyle" parent="Theme.TheWeather">
        <item name="android:paddingStart">@dimen/mainPaddingStartEnd</item>
        <item name="android:paddingEnd">@dimen/mainPaddingStartEnd</item>
        <item name="android:paddingTop">@dimen/mainPaddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/mainPaddingTopBottom</item>
    </style>

    <style name="SuggestionCardStyle" parent="CardView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">#CDFFFFFF</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="SuggestionsTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/suggestion</item>
        <item name="android:shadowColor">@color/white</item>

    </style>

    <style name="MinMaxTempStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/weatherCode</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="DaysStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WeatherTextStatus" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
    </style>
</resources>